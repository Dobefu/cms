{
  "openapi": "3.1.1",
  "info": {
    "title": "CMS",
    "description": "REST API for the CMS",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "All user endpoints"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["User"],
        "summary": "Log in",
        "description": "Log in using a username and password",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "",
                    "default": ""
                  },
                  "password": {
                    "type": "string",
                    "description": "",
                    "default": ""
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string"
                        }
                      }
                    },
                    "error": {
                      "type": "null"
                    }
                  },
                  "examples": [
                    {
                      "data": {
                        "token": "some-generated-token"
                      },
                      "error": null
                    }
                  ]
                }
              }
            }
          },
          "4xx | 5xx": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "null"
                    },
                    "error": {
                      "type": "string"
                    }
                  },
                  "examples": [
                    {
                      "data": null,
                      "error": "Could not log in"
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "X-Api-Key",
        "in": "header"
      }
    }
  }
}
