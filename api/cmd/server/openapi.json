{
  "openapi": "3.1.1",
  "info": {
    "title": "CMS",
    "description": "REST API for the CMS",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "tags": [
    {
      "name": "User",
      "description": "All user endpoints"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["User"],
        "summary": "Log in",
        "description": "Log in using a username and password",
        "consumes": ["application/x-www-form-urlencoded"],
        "produces": ["application/json"],
        "requestBody": {
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "required": ["username", "password"],
                "properties": {
                  "username": {
                    "type": "string",
                    "description": "",
                    "default": ""
                  },
                  "password": {
                    "type": "string",
                    "description": "",
                    "default": ""
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string"
                        }
                      }
                    },
                    "error": {
                      "type": "null"
                    }
                  },
                  "examples": [
                    {
                      "data": {
                        "token": "some-generated-token"
                      },
                      "error": null
                    }
                  ]
                }
              }
            }
          },
          "4xx | 5xx": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "null"
                    },
                    "error": {
                      "type": "string"
                    }
                  },
                  "examples": [
                    {
                      "data": null,
                      "error": "Could not log in"
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/validate-session": {
      "get": {
        "tags": ["User"],
        "summary": "Validate user session",
        "description": "Validate a user session",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "Session-Token",
            "description": "The user session token that is obtained after logging in",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Refresh",
            "description": "Refresh the session token if it's older than five minutes",
            "in": "header",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string"
                        }
                      }
                    },
                    "error": {
                      "type": "null"
                    }
                  },
                  "examples": [
                    {
                      "data": {
                        "token": "some-generated-token"
                      },
                      "error": null
                    }
                  ]
                }
              }
            }
          },
          "4xx | 5xx": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "null"
                    },
                    "error": {
                      "type": "string"
                    }
                  },
                  "examples": [
                    {
                      "data": null,
                      "error": "Missing session_token"
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/logout": {
      "get": {
        "tags": ["User"],
        "summary": "Log out",
        "description": "Log out an authenticated user",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "Session-Token",
            "description": "The user session token that is obtained after logging in",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "null"
                    },
                    "error": {
                      "type": "null"
                    }
                  },
                  "examples": [
                    {
                      "data": null,
                      "error": null
                    }
                  ]
                }
              }
            }
          },
          "4xx | 5xx": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "null"
                    },
                    "error": {
                      "type": "string"
                    }
                  },
                  "examples": [
                    {
                      "data": null,
                      "error": "Could not validate session_token"
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    },
    "/user-data": {
      "get": {
        "tags": ["User"],
        "summary": "User data",
        "description": "Get the data of the currently logged in user",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "Session-Token",
            "description": "The user session token that is obtained after logging in",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "username": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "status": {
                          "type": "boolean"
                        },
                        "created_at": {
                          "type": "string"
                        },
                        "updated_at": {
                          "type": "string"
                        },
                        "last_login": {
                          "type": "string"
                        }
                      }
                    },
                    "error": {
                      "type": "null"
                    }
                  },
                  "examples": [
                    {
                      "data": {
                        "user": {
                          "id": 1,
                          "username": "username",
                          "email": "email@example.com",
                          "status": true,
                          "created_at": "1970-01-01T00:00:00.000000Z",
                          "updated_at": "1970-01-01T00:00:00.000000Z",
                          "last_login": "1970-01-01T00:00:00.000000Z"
                        }
                      },
                      "error": null
                    }
                  ]
                }
              }
            }
          },
          "4xx | 5xx": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "null"
                    },
                    "error": {
                      "type": "string"
                    }
                  },
                  "examples": [
                    {
                      "data": null,
                      "error": "Could not validate session_token"
                    }
                  ]
                }
              }
            }
          }
        },
        "security": [
          {
            "api_key": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "api_key": {
        "type": "apiKey",
        "name": "X-Api-Key",
        "in": "header"
      }
    }
  }
}
